<div class="container mt-5 mb-5">
  <div class="content shadow p-4 rounded">
    <% if notice %>
      <div class="alert alert-success" role="alert">
        <%= notice %>
      </div>
    <% end %>

    <%= render @product %>

    <div class="mt-3">
      <%= link_to "Edit this product", edit_product_path(@product), class: "btn btn-primary me-2" %>
      <%= link_to "Back to products", products_path, class: "btn btn-secondary me-2" %>

      <%= button_to "Destroy this product", @product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger mt-2" %>
    </div>
  </div>
</div>