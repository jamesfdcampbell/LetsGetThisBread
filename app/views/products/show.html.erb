<div class="container mt-5 mb-5">
  <div class="content shadow p-4 rounded">
    <div class="row">
      <!-- New Column for Unsplash Image -->
      <div class="col-md-3">
        <% if @product.name %>
          <% formatted_product_name = @product.name.gsub(' ', '-') %>
          <%= image_tag "https://source.unsplash.com/featured/350x350/?#{formatted_product_name}", class: "img-fluid rounded" %>
        <% end %>
      </div>

      <!-- Existing Product Details Column -->
      <div class="col-md-9">
          <% if notice %>
            <div class="alert alert-success" role="alert">
              <%= notice %>
            </div>
          <% end %>

          <%= render @product %>

          <div class="mt-3">
            <%= link_to "Back to products", products_path, class: "btn btn-secondary me-2" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
